{
  "name": "vscode-dear-blog",
  "displayName": "Dear Blog",
  "icon": "icon.png",
  "description": "For my dearest wife, with all my love.",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.100.0"
  },
  "publisher": "dongfg",
  "repository": "https://github.com/dongfg/vscode-dear-blog",
  "bugs": {
    "url": "https://github.com/dongfg/vscode-dear-blog/issues"
  },
  "homepage": "https://github.com/dongfg/vscode-dear-blog/blob/master/README.md",
  "categories": [
    "Other"
  ],
  "keywords": [
    "hugo",
    "blog",
    "markdown",
    "preview",
    "deploy"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Dear Blog",
      "properties": {
        "dearBlog.templateDirectory": {
          "type": "string",
          "default": "content/posts/_tpl",
          "description": "模板文件存放目录（相对于工作区根目录）"
        },
        "dearBlog.postsDirectory": {
          "type": "string",
          "default": "content/posts",
          "description": "文章存放目录（相对于工作区根目录）"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dear-blog-container",
          "title": "Dear Blog",
          "icon": "$(heart-filled)"
        }
      ]
    },
    "views": {
      "dear-blog-container": [
        {
          "icon": "$(heart-filled)",
          "type": "webview",
          "id": "dear-blog.view",
          "name": "Blog Manager"
        }
      ]
    },
    "commands": [
      {
        "command": "dear-blog.newPost",
        "title": "New Blog Post"
      },
      {
        "command": "dear-blog.publish",
        "title": "Publish Blog"
      },
      {
        "command": "dear-blog.preview",
        "title": "Preview Blog"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}